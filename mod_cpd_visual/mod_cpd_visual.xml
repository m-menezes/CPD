<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1" client="site" method="upgrade">
	<name>CPD Identidade Visual</name>
	<author>Marcelo Menezes S.</author>
	<creationDate>Junho 2017</creationDate>
	<copyright>Copyright (C) 2017. All rights reserved.</copyright>
	<authorEmail>m.silva@inf.ufsm.br</authorEmail>
	<version>17.6.23</version>
	<description>Modulo para inclusão da identidade visual do site</description>
	<files>
		<filename module="mod_cpd_visual">mod_cpd_visual.php</filename>
		<folder>tmpl</folder>
		<filename>helper.php</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field 
					name="background_link" 
					type="color" 
					default="005285"
					label="Cor Background"
					description="Cor do background do titulo"
					>
				</field>
				<field 
					name="margin_top" 
					type="text" 
					default="5px"
					label="Margin Topo"
					description="Margin Topo do Titulo"
					>
				</field>
				<field 
					name="altImg" 
					type="textarea" 
					default="Identidade Visual do Site"
					label="Descrição para acessibilidade"
					description="Tag(alt) adicionado a imagem, função acessibilidade."
					rows="5"
					>
				</field>
				<field name="logo" type="media" directory="" />
			</fieldset>
		</fields>
	</config>
</extension>
