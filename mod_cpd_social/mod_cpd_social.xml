<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1" client="site" method="upgrade">
	<name>CPD Sociais</name>
	<description>Módulo apresentação icones com link redes sociais.</description>
	<author>Marcelo Menezes S.</author>
	<creationDate>Abril 2017</creationDate>
	<copyright>Copyright (C) 2017. All rights reserved.</copyright>
	<authorEmail>m.silva@inf.ufsm.br</authorEmail>
	<version>17.6.13</version>
	<files>
		<filename module="mod_cpd_social">mod_cpd_social.php</filename>
		<folder>tmpl</folder>
		<filename>helper.php</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<!-- TEXTO -->
				<field 
					name="color"
					type="color"
					default="#000000"
					label="Cor Titulo"
					description=""				
					>
				</field>
				<field
					name="icon_px"
					type="text"
					default="25px"
					label="Tamanho icone"
					description="Tamanho em px, % ou auto."
					>
				</field>
				<field 
					name="facebook"
					type="radio"
					label="Facebook"
					description="Exibir icone facebook"
					class="btn-group btn-group-yesno"
					default="0"
					>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>				
				<field 
					name="facebook_url"
					type="url"
					default="#"
					label="URL facebook"
					description="Cole o link do facebook, Ex.: http://facebook.com/exemplo"
					showon="facebook:1"
					>
				</field>
				<field 
					name="twitter"
					type="radio"
					label="Twitter"
					description="Exibir icone twitter"
					class="btn-group btn-group-yesno"
